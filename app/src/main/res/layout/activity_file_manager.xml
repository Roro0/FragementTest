<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:background="#0000ff"
        android:layout_height="100dp"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/iv_file_manager_allmem"
            android:layout_centerInParent="true"
            android:text="00.00M"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />
        <TextView
           
            android:layout_toLeftOf="@+id/iv_file_manager_allmem"
            android:textColor="#ffffff"
            android:text="已发现"
            android:layout_alignBaseline="@+id/iv_file_manager_allmem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/ll_file_manager_all"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="55dp" >
       <TextView
            android:text="全部"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" /> 
            <TextView
            android:id="@+id/iv_file_manager_allmem_other"    
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="00.00M"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />  
            <ImageView
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp" 
                />
            <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp" 
                />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_file_manager_txt"
